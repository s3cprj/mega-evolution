<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Megashinka"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="Megashinka.Setting"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Background="AntiqueWhite"
      Title="Setting">

    <Grid>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="設定" FontWeight="Bold" FontSize="50" Height="59" Margin="0,57,0,334" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="131,154,0,0" TextWrapping="Wrap" Text="音量" FontSize="30" VerticalAlignment="Top" RenderTransformOrigin="0.858,0.526"  />
        <TextBlock HorizontalAlignment="Left" Margin="103,236,0,0" TextWrapping="Wrap" FontSize="30" VerticalAlignment="Top" RenderTransformOrigin="0.858,0.526" Height="34">
			<Run Language="ja-jp" Text="アラーム音"/>
			<LineBreak/>
			<Run Language="ja-jp"/>
        </TextBlock>
        <Slider x:Name="slider"  Maximum="100" Minimum="0" Value="50" Margin="259,164,82,266" AutoToolTipPlacement="TopLeft" ValueChanged="Slider_Change" />
        <RadioButton x:Name="RadioButton1" Content="警告音" FontSize="20" HorizontalAlignment="Left" Margin="250,243,0,0" VerticalAlignment="Top" Height="29" Width="115" Checked="RadioButton_Checked_1"/>
        <RadioButton x:Name="RadioButton2" Content="ボイス" FontSize="20" HorizontalAlignment="Left" Margin="379,243,0,0" VerticalAlignment="Top" Height="29" Width="115" Checked="RadioButton_Checked_2"/>
        <RadioButton x:Name="RadioButton3" Content="ユーザー設定" FontSize="20" HorizontalAlignment="Left" Margin="495,243,0,0" VerticalAlignment="Top" Height="29" Width="148" Checked="RadioButton_Checked_3"/>
        <Button Content="プレビュー" FontSize="20" Width="120" Height="45" HorizontalAlignment="Center" Margin="0,338,0,0" VerticalAlignment="Top" Click="PreviewButton_Click" Cursor="Hand"/>

        <Button Content="参照" HorizontalAlignment="Left" Margin="648,243,0,0" VerticalAlignment="Top" Height="30" Width="70" Click="FileButton_Click" />
        <materialDesign:PackIcon  Kind="SubdirectoryArrowLeft" Margin="15,10,0,0" Height="53" Width="72" />
        <Button Content="" Background="Transparent" BorderBrush="Transparent" FontWeight="Bold" FontSize="40"  Margin="15,10,0,0" Height="53" Width="72" HorizontalAlignment="Left" VerticalAlignment="Top" Click="BackButton_Click"  />
    </Grid>
</Page>